{
  "name": "kabisa-new-backend",
  "version": "1.0.0",
  "description": "NFT Marketplace Backend API",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "npx prisma generate && tsc && tsc-alias",
    "build:render": "npm install && npx prisma generate && tsc && tsc-alias && npx prisma migrate deploy",
    "deploy": "npx prisma generate && npm run build && docker build . -t ghcr.io/programmerdatch/kabisa-new-backend:latest && docker push ghcr.io/programmerdatch/kabisa-new-backend:latest && ssh urhgserver 'cd /root/apps/programmerdatch/kabisa-new-backend && docker compose pull && docker compose up -d --force-recreate'",
    "db:reset": "npx prisma migrate reset --force",
    "db:push": "npx prisma db push --force-reset",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:create-admin": "IS_SCRIPT=true ts-node -r tsconfig-paths/register scripts/createAdmin.ts",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org kabisa-electric --project web-backend ./dist && sentry-cli sourcemaps upload --org kabisa-electric --project web-backend ./dist"
  },
  "keywords": [],
  "author": "KABISA",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "@sentry/cli": "^2.56.0",
    "@sentry/node": "^10.17.0",
    "@types/moment-timezone": "^0.5.13",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^10.2.0",
    "helmet": "^7.1.0",
    "http-status": "^1.8.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "prisma-error-formatter": "^1.0.1",
    "resend": "^4.8.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tronweb": "^6.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/decimal.js": "^0.0.32",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.23",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/xss-filters": "^0.0.30",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "prisma": "^6.16.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
